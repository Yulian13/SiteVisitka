
@{
	ViewData["Title"] = "PutSqlRequestk";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
	footer {
		margin-top: 100%;
	}

	textarea {
		height: 400%;
	}
</style>
<div class="container">
	<div class="row">
		<h1>PutSqlRequestk</h1>
	</div>
	<div class="row">
		<form name="PostRequest">
			<textarea name="request"></textarea>
			<label id="ErrorUrls" style="color:red"></label>

			<br />
